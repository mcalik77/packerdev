{
    "builders": [{
      "type": "amazon-ebs",
      "region": "{{user `region` }}",
      "instance_type": "t2.micro",
      "ssh_username": "ec2-user",
      "source_ami"  : "{{user `AMI`}}",
      "ami_name"    : "updated-ami {{timestamp}}"
    }],
    "provisioners": [{
            "type": "shell",
            "inline": [
                "sudo yum update -y"
            ]
          }
    ]
  }